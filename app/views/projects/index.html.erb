<h1>Projects Index</h1>
<% if current_user %>
<%= link_to "Add a new Project", new_project_path %>
<% end %>

<%= form_tag("/search", method: :get) do %>
	<%= label_tag(:search, "Search") %>
	<%= text_field_tag(:search) %>
	<%= submit_tag("Search") %>
<% end %>

<ul>
	<% @projects.each do |project| %>
	<li>
		<h1><%= link_to project.name, project_path(project) %></h1>
		<% if current_user %>
		<span>
			<%= link_to "Delete", project_path(project), method: :delete, data: {confirm: "Are you sure you want to delete this student?"} %>
		</span>
		<% end %>
	</li> 
	<% end %>
</ul>