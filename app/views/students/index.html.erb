<div class='row'>
	<div class='col-md-12'>
		<h1>Student list</h1>
	</div>
</div>


<div class="row">
	<div class="col-md-8">
		<%= link_to "Add a new Student", new_student_path %><br><br>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Full Name</th>
					<th>Email</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				<% @students.each do |student| %>
				<tr>
					<td><%= link_to student.full_name, student_path(student) %></td>
					<td><%= student.email %></td>
					<td><%= link_to "Delete", student_path(student), method: :delete, data: {confirm: "Are you sure you want to delete this student?"} %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>