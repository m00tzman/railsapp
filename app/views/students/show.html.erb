<h1>STUDENT PROFILE</h1>
<%= link_to "Edit Information", edit_student_path(@student) %>

<h2><%= @student.full_name %></h2>
<h3><%= @student.hero %></h3>
<h4><%= @student.email %></h4>
<h4><%= formatted_phone_number(@student.phone) %></h4>
<h5><span>Created: </span><%= time_ago_in_words(@student.created_at) %> ago</h5>

<h2><%= @student.full_name %>'s projects</h2>

<% @projects.each do |project| %>
	<ul>
		<li>
			<%= project.name %>
		</li>
	</ul>
<% end %>
<br>
<br>

<h2><%= @student.full_name %>'s projects</h2>

<% @student.courses.each do |course| %>
<ul>
	<li>
		<%= course.name %>
	</li>
</ul>
<% end %>
<br>
<br>

<%= link_to "Back to Student List", students_path %>